{
  "display_information": {
    "name": "ShoulderTap",
    "description": "Intelligent notification filtering",
    "background_color": "#1a1a1a"
  },
  "features": {
    "bot_user": {
      "display_name": "ShoulderTap",
      "always_online": true
    }
  },
  "oauth_config": {
    "redirect_urls": ["https://your-domain.com/slack/oauth/callback"],
    "scopes": {
      "bot": ["chat:write", "im:write", "users:read"],
      "user": [
        "channels:history",
        "groups:history",
        "im:history",
        "mpim:history",
        "channels:read",
        "groups:read",
        "im:read",
        "mpim:read",
        "users:read",
        "reactions:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://your-domain.com/slack/events",
      "user_events": [
        "message.channels",
        "message.groups",
        "message.im",
        "message.mpim",
        "reaction_added"
      ]
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://your-domain.com/slack/events"
    },
    "socket_mode_enabled": false
  }
}
