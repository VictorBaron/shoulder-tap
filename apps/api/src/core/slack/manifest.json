{
  "display_information": {
    "name": "Drift",
    "description": "Project channels information recap",
    "background_color": "#1a1a1a"
  },
  "features": {
    "bot_user": {
      "display_name": "Drift",
      "always_online": true
    }
  },
  "oauth_config": {
    "redirect_urls": ["https://localhost:3000/slack/oauth/callback"],
    "scopes": {
      "bot": ["chat:write", "im:write", "users:read"],
      "user": [
        "channels:history",
        "groups:history",
        "im:history",
        "mpim:history",
        "channels:read",
        "groups:read",
        "im:read",
        "mpim:read",
        "users:read",
        "reactions:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://localhost:3000/slack/events",
      "user_events": ["message.channels", "message.groups", "message.im", "message.mpim", "reaction_added"]
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://localhost:3000/slack/events"
    },
    "socket_mode_enabled": false
  }
}
