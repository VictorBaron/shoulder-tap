{
  "name": "shoulder-tap-electron",
  "version": "1.0.0",
  "description": "Shoulder Tap application",
  "license": "MIT",
  "author": "Victor Baron",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently -k \"tsc -p tsconfig.json --watch\" \"vite\" \"wait-on http://localhost:5173 dist/main.js && VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "tsc -p tsconfig.json && vite build",
    "start": "electron .",
    "test": "echo \"No test specified\" "
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4",
    "concurrently": "^9",
    "electron": "^40.6.0",
    "typescript": "~5.7.3",
    "vite": "^6",
    "wait-on": "^8"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
