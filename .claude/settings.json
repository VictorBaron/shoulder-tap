{
  "hooks": {
    "postEditCommand": "pnpm biome check --write {file}",
    "postWrite": "pnpm biome check --write {file}",
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx @biomejs/biome check --write --no-errors-on-unmatched $CLAUDE_FILE_PATHS",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(git -C /Users/victor/decide remote:*)",
      "Bash(pnpm --filter api add dotenv)",
      "Bash(pnpm prisma db push:*)",
      "Bash(docker exec:*)",
      "Bash(pnpm prisma generate:*)",
      "Bash(pnpm prisma migrate dev:*)",
      "Bash(pnpm create:*)",
      "Bash(pnpm install:*)",
      "Bash(pnpm --filter web add react-router-dom)",
      "Bash(pnpm build:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(pnpm --filter api add:*)",
      "Bash(chmod:*)",
      "Read(*)",
      "Write(*)",
      "Edit(*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  }
}
